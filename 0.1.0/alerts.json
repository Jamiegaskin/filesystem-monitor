{
  "FILESYSTEM_MONITOR": {
    "TRANSMITTER": [
        {
          "name": ".home_size",
          "label": "/home size",
          "description": "Triggered when /home usage passes thresholds",
          "interval": 1,
          "scope": "ANY",
          "enabled": true,
          "source": {
            "type": "SCRIPT",
            "path": "FILESYSTEM_MONITOR/0.1.0/package/alerts/filesystem-alert.py",
            "parameters": [{
              "name": "filepath",
              "display_name": "File Path",
              "value": "/home",
              "type": "STRING",
              "description": "/home file path"
            },
            {
              "name": "server_host",
              "display_name": "Ambari Server Host",
              "value": "{{clusterHostInfo/ambari_server_host}}",
              "type": "STRING",
              "description": "Name of the host that runs the Ambari Server."
            }]
          }
      },
        {
          "name": ".tmp_size",
          "label": "/tmp size",
          "description": "Triggered when /tmp usage passes thresholds",
          "interval": 1,
          "scope": "ANY",
          "enabled": true,
          "source": {
            "type": "SCRIPT",
            "path": "FILESYSTEM_MONITOR/0.1.0/package/alerts/filesystem-alert.py",
            "parameters": [{
              "name": "filepath",
              "display_name": "File Path",
              "value": "/tmp",
              "type": "STRING",
              "description": "/tmp file path"
            },
            {
              "name": "server_host",
              "display_name": "Ambari Server Host",
              "value": "{{clusterHostInfo/ambari_server_host}}",
              "type": "STRING",
              "description": "Name of the host that runs the Ambari Server."
            }]
          }
        }
    ]
  }
}
